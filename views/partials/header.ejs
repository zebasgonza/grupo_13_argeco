<header>
    <nav>
        <div class="left-navbar">
            <a href="#" class="container-hamburguer-button">
                <i class="material-symbols-outlined hamburguer-button">menu</i>
            </a>
            
            <ul id="navbar-list">
                <li><a href="/">home</a></li>
                <li><a href="/users/login">login</a></li>
                <li><a href="/users/register">registro</a></li>
                <li><a href="/products">productos</a></li>
            </ul>
            <script>
                    const menuList = document.getElementById("navbar-list");

                    // Obtén una referencia al botón de menú
                    const menuButton = document.querySelector(".container-hamburguer-button");

                    // Agrega un evento de clic al botón de menú
                    menuButton.addEventListener("click", () => {
                        // Alterna la visibilidad de la lista al hacer clic en el botón de menú
                        if (menuList.style.display === "none") {
                            menuList.style.display = "block";
                        } else {
                            menuList.style.display = "none";
                        }
                    });

            </script>
        </div>
        
        <div class="center-navbar">
            <img src="/img/img-furni-house-logo.svg" alt="logo" class="logo">
        </div>

        <ul class="right-navbar">
            <li>
                <a id="search" href="#">
                    <i class="material-symbols-outlined">search</i>
                </a>
            <li><a href="/login"></a><i class="material-symbols-outlined">login</i></li>
            <li><a href="/products/cart"><i class="material-symbols-outlined">shopping_cart</i></a></li>
        </ul>

        <script>
                // Obtén una referencia al elemento <a> que deseas reemplazar
                const enlace = document.getElementById("search");

                // Crea un nuevo elemento <input>
                const input = document.createElement("input");
                input.type = "text";
                input.id = "miInput";
                input.value = "";
                // input.style.border = "1px solid #ccc"; 
                // input.style.padding = "5px"; 
                // input.style.fontSize = "16px"; 

                // Reemplaza el elemento <a> con el nuevo elemento <input>
                enlace.addEventListener("click", () => {
                    enlace.parentNode.replaceChild(input, enlace);
                })
        </script>
    </nav>
</header>
