<body>

    <%- include('../partials/header') %>

        <main class="main-detail">
            <section class="container">
                <article class="container-product">
                    <div class="container-product-mainpicture">
                        <img src="<%= product.imagen %>" alt="Imagen de una mesa familiar que esta en venta">
                    </div>

                    <div class="container-productDetail-info">

                            <h2><%= product.nombre %></h2>
                            <p class="categoria"> <%= product.categoria %></p>
                            <p class="descripcion"> <%= product.descripcion %></p>
                        

                        <div class="container-icon-start">
                            <i class="material-symbols-outlined icon-start-rate">
                                star_rate
                            </i>                                               
                            <i class="material-symbols-outlined icon-start-rate">
                                star_rate
                            </i>
                            <i class="material-symbols-outlined icon-start-rate">
                                star_rate
                            </i>
                            <i class="material-symbols-outlined icon-start-rate">
                                star_rate
                            </i>
                            <i class="material-symbols-outlined icon-start-rate-half">
                                star_rate_half
                            </i>
                        </div>
                        <div class="container-precio">
                            <p class="precio"><%= product.precio%></p>
                            <p class="descuento"><%= product.cantidad %> Disponibilidad</p>
                        </div>
                        
                        <form action="/" method="POST">
                            <div class="cantidad">
                                <label for="cantidad">Cantidad</label>
                                <input type="number" id="cantidad" name="cantidad" min="0" value="1"
                                    class="cantidad-input">
                            </div>
                            <input class="boton-comprar" type="submit" value="Comprar">
                            <input class="boton-shoppingcart" type="submit" value="Agregar al carrito">
                            
                        </form>
                    </div>
